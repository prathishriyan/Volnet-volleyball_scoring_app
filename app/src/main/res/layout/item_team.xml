<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:background="@drawable/bg_team_card"
    android:elevation="4dp">

    <!-- Header Row: Team Name + Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/imageTeamLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Team Logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Edit -->
        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit team"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- Explore -->
        <ImageView
            android:id="@+id/btn_explore"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/more"
            android:contentDescription="Explore team"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- Delete -->
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete team"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Optional Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        android:layout_marginVertical="6dp" />

    <!-- Placeholder for Player List (hidden until Explore is clicked) -->
    <!-- Expandable Player Section (hidden until Explore is clicked) -->
    <LinearLayout
        android:id="@+id/player_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#FFF7F7F7"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/label_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players:"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Dynamic player list goes here -->
        <LinearLayout
            android:id="@+id/player_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Edit Button inside expanded section -->
<!--        <Button-->
<!--            android:id="@+id/btn_edit_expanded"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Edit Team"-->
<!--            android:layout_marginTop="8dp"-->
<!--            android:layout_gravity="end"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:backgroundTint="@color/black" />-->
    </LinearLayout>

</LinearLayout>
