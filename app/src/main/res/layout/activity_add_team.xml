<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/page_background"
    android:layout_height="match_parent">

    <!-- header-->
    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/red"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/back"
            android:src="@drawable/outline_arrow_back_24"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ADD TEAM"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- Logo Upload -->


    <!-- Scrollable Player Section -->
    <ScrollView
        android:id="@+id/scroll_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
<!--            android:layout_marginBottom="100dp">-->

            <!-- Logo Upload Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_team_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:strokeColor="@android:color/transparent" />
            </RelativeLayout>
            <!-- Team Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/team_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="0"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="12dp"
                    android:hint="@string/enter_team_name"
                    android:inputType="textCapWords"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/textGray"
                    android:textSize="12sp"
                    />


            </LinearLayout>
            <!-- Team Players Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/team_players"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Player Items -->
            <LinearLayout
                android:id="@+id/player_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name1"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player1"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name2"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player2"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name3"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player3"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name4"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player4"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name5"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player5"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="4dp">

                    <!-- Jersey Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/player_icon"
                        android:src="@drawable/ic_jersey"
                        app:tint="@color/textGray" />

                    <!-- Player Name EditText -->
                    <EditText
                        android:id="@+id/et_player_name6"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:autofillHints="0"
                        android:background="@drawable/edit_text_background"
                        android:hint="@string/hint_player6"
                        android:inputType="textPersonName|textCapWords"
                        android:maxWidth="250dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:singleLine="true"
                        android:textColor="@color/textBlack"
                        android:textColorHint="@color/textGray"
                        android:textSize="12sp" />

                    <!-- Delete Button -->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_add_players"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_substitute_background"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:text="@string/add_sub"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/add_button_selector"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Dummy views to demonstrate scrolling -->

<!--            <View android:layout_width="match_parent" android:layout_height="1000dp" android:background="#EEEEEE"/>-->
        </LinearLayout>
    </ScrollView>
    <!-- Save & Cancel Buttons -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/page_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_changes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/btn_save_background"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/btn_cancel_background"
            android:gravity="center"
            android:textAlignment="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/darkGray"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>